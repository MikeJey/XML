	<persona:contacto>
		<persona:nombre>Ana</persona:nombre>
		<!-- En lugar de crear dos etiquetas he usado la misma para el apellido pero con un atributo diferenciador. -->
		<persona:apellido tipo="primero">Fernández</persona:apellido>
		<persona:apellido tipo="segundo">Gutiérrez</persona:apellido>
		<!-- Al igual que con el apellido he usado un atributo diferenciador para la etiqueta teléfono -->
		<persona:telefono tipo="personal">789654321</persona:telefono>
		<persona:telefono tipo="trabajo">789654320</persona:telefono>
		<persona:telefono tipo="casa">989654320</persona:telefono>
		<!-- De nuevo uso un atributo diferenciador para el email por si algún contacto tiene uno personal y otro para el trabajo -->
		<persona:email tipo="personal">ana.fdezgtrrez@hotmail.com</persona:email>
		<persona:direccion>Calle El Percebe, 13</persona:direccion>
	</persona:contacto>
	<empresa:contacto>
		<empresa:nombre>Dentistas Happy Smile SL</empresa:nombre>
